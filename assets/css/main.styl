link-color = #36c
fixed-width-fonts = monospace
content-box-shadow = 0 5px 10px -5px rgba(0, 0, 0, 0.2)

user-select()
  -webkit-touch-callout arguments
  -webkit-user-select arguments
  -khtml-user-select arguments
  -moz-user-select arguments
  -ms-user-select arguments
  user-select arguments

box-shadow()
  -webkit-box-shadow arguments
  -khtml-box-shadow arguments
  -moz-box-shadow arguments
  -ms-box-shadow arguments
  -o-box-shadow arguments
  box-shadow arguments

box-sizing()
  -webkit-box-sizing arguments
  -khtml-box-sizing arguments
  -moz-box-sizing arguments
  -ms-box-sizing arguments
  -o-box-sizing arguments
  box-sizing arguments

*
  outline none

body
  font-family Lato, Arial, sans-serif
  background #000
  font-size 100%
  line-height 1.7

canvas#headersketch
  position absolute
  width 1000px
  height 300px
  margin-left -500px
  left 50%

header
  height 230px
  font-family "Open Sans", Arial, sans-serif
  margin-bottom -32px
  box-sizing border-box

  a
    font-size 3.5em
    position absolute
    top 120px
    left 0.25em
    z-index 2
    text-shadow 0 2px 4px rgba(0, 0, 0, 0.35)
    
    &, &:visited, &:hover
      color #fff

    &:hover
      border none

a
  color link-color
  text-decoration none

  &:visited
    color link-color

  &:hover
    color lighten(link-color, 10%)
    text-decoration none

h1, h2, h3, h4, h5, h6
  font-family "Open Sans"

h1
  font-size 2.5em
  padding-bottom 10px
  border-bottom 1px solid #ddd

h2
  font-size 1.75em

h3
  font-size 1.5em

h4
  font-size 1.25em

h5
  font-size 1.0em

li
  line-height inherit

pre, code
  font-family fixed-width-fonts

pre
  width 100%
  box-sizing border-box
  padding 0.5em 1em
  border-left 2px solid lighten(link-color, 50%)
  overflow auto
  margin-bottom 20px

code
  padding 0.2em
  border 1px solid #ddd
  background #f7f7f7
  color #f37

footer
  margin-top 14px
  padding 10px 0
  background #111
  color #eee

nav
  .pages, .auth
    padding 0.5em

  .pages
    a
      margin-right 1em

      i
        color lighten(link-color, 70%)

  .auth
    text-align right

    .action.logout
      margin-left 0.5em
      padding-left 0.5em
      border-left 1px solid #ccc

#content

.boxed
  box-shadow content-box-shadow
  background #fff
  margin-top 18px
  margin-bottom 18px

.coffee-script-container
  position relative

.coffee-script-toggler
  position absolute
  right 1px
  top 1px
  background #111
  color #fff
  padding 4px 12px
  font-weight bold
  user-select none
  box-shadow inset 0 24px 24px -12px rgba(255, 255, 255, 0.5), -1px 1px 3px rgba(0, 0, 0, 0.25)
  border 1px solid #777
  border-top none
  border-right none
  border-top-right-radius 3px
  border-bottom-left-radius 10px
  cursor pointer

  &:hover
    background #222


form
  input[type=text],
  input[type=password],
  textarea
    box-sizing border-box

  textarea
    width 100%
    height 200px

  &.blog
    input[type=text]
      width 100%

    textarea
      &.description
        height 120px
        font-family fixed-width-fonts

      &.content
        height 360px
        font-family fixed-width-fonts

// .blog-archive-container, .blog-entry-container
//   padding 1em

ul.actions
  list-style-type none

  li
    display inline-block
    margin-right 1em

.blog-published
  margin-bottom 1em
  font-size 0.85em
  color #888

section.comments
  margin-top 1em
  border-top 2px solid #eee
  padding-top 1em

ul.blogs
  li.blog
    clear left
    overflow hidden

    .published
      text-align center
      display block
      position relative
      border 1px solid #eee
      height 5.5em
      margin 0.5em 0 0
      box-shadow 0 5px 5px -3px rgba(0, 0, 0, 0.1)

      span
        display block

        &.month
          font-weight bold
          font-size 0.85em
          background #f2f2f2

        &.day
          position absolute
          top 0.25em
          left 0
          right 0
          font-size 2.5em

        &.year
          position absolute
          bottom 0
          left 0
          right 0
          font-size 0.85em

.sidebar
  border-left 1px solid #eee
  padding 1em 0 1em 1em

  p
    font-size 0.85em
